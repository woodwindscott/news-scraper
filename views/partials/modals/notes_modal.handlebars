<!-- Modal to display notes -->
<div class="modal" id="view-notes" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center">Notes For Article: {{_id}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{!-- TODO: --}}

                {{!-- {{#each notes}} --}}
                    <div class="display-note">
                        <div class="row">
                            <div class="col-md-10">
                                {{!-- ID: {{_id}}<br>
                                Inside notes display: {{body}} --}}
                                ID: {{notes._id}}<br>
                                {{!-- Inside notes display:  --}}
                                {{notes.body}}
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-danger delete-note">X</button>
                            </div>
                        </div>
                    </div>
                {{!-- {{/each}} --}}

                {{!-- End TODO: --}}

                <div class="form-group text-center">
                    <label for="article-note">Enter your note here:</label>
                    <textarea class="form-control" id="article-note" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="new-note">SAVE NOTE</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>